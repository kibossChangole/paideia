{
  "expo": {
    "name": "paideia",
    "slug": "paideia",
    "version": "1.0.0",
    "splash": {
      "image": "./assets/images/finalSplash.jpg",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
      "assetBundlePatterns": [
      "**/*"
    ],
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "paideia",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "splashScreen": {
        "hideNavigationBar": true
      },
      "package": "com.kiboss.paideia"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "40c5e0e7-b070-4a15-a47c-3c7bcff4cb79"
      }
    }
  }
}
